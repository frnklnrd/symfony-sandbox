{{ form_start(form, {'action': path('fos_user_resetting_reset', {'token': token } ) }) }}

<div class="form-group control-group col-lg-12 {%if (form_errors(form.new.first))%}has-error{%endif%}">
    <label class="col-lg-3 text-right control-label" for="{{form.new.first.vars.id}}">{{ 'New'|trans({}, 'FOSUserBundle') }}:</label>
    {{ form_widget(form.new.first, {'attr':{'class':'col-lg-5'}}) }}
</div>
<div class="form-group control-group col-lg-12 {%if (form_errors(form.new.second))%}has-error{%endif%}">
    <label class="col-lg-3 text-right control-label" for="{{form.new.second.vars.id}}">{{ 'Confirm'|trans({}, 'FOSUserBundle') }}:</label>
    {{ form_widget(form.new.second, {'attr':{'class':'col-lg-5'}}) }}
</div>
{{ form_widget(form) }}
<div class="form-actions form-group form-actions col-lg-12">
    <div class="col-sm-offset-3 col-sm-9">
        <input type="submit" value="{{ 'resetting.reset.submit'|trans({}, 'FOSUserBundle') }}" class="btn btn-primary" />
    </div>
</div>
{{ form_end(form) }}
