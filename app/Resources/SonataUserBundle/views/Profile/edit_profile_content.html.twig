<form action="{{ path('sonata_user_profile_edit') }}" method="POST" class="form-horizontal" {{ form_enctype(form) }}>
    
    {{ form_row(form.firstname) }}
    {{ form_row(form.lastname) }}
    {{ form_row(form.phone) }}
    {{ form_row(form.dateOfBirth) }}
    {{ form_row(form.gender) }}
    {{ form_widget(form) }}

    <div class="form-actions form-group col-sm-12">
        <div class="col-sm-offset-3 col-sm-9">
            <button type="submit" class="btn btn-primary">{{ 'sonata_user_submit'|trans({}, 'SonataUserBundle') }}</button>
        </div>
    </div>
</form>
