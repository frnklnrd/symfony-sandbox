<div class="panel panel-primary" style="overflow-y:hidden">
    {% if log.action == 'insert' %}
        <table class="table table-hover table-striped">
            <caption style="padding: 0px;">
                <div class="panel-heading" style="color: #fff;background-color: #337ab7;border-color: #337ab7;">
                    <h3 class="panel-title"><i class="fa fa-table"></i> {{ admin.trans('Fields', {}, admin.translationDomain)}}</h3>
                </div>
            </caption>
            <tbody>
                {% for field, change in log.diff %}
                    <tr>
                        <td class="col-md-4" style="text-align:left;" title="{{ admin.trans(decamelize(field), {}, 'AppBundle') }}"><strong>{{ admin.trans(decamelize(field), {}, 'AppBundle') }}</strong></td>
                        <td class="col-md-8" style="text-align:left;" title="{{ audit_value(change.new) }}">{{ audit_value(change.new) }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        {#<ul class="list-group">
          {% for field, change in log.diff %}
            <li class="list-group-item">
              <span class="badge">{{ audit_value(change.new) }}</span>
              {{ admin.trans(decamelize(field), {}, 'AppBundle') }}
            </li>
          {% endfor %}
        </ul>#}
    {% else %}
        <table class="table table-striped table-hover">
            <caption style="padding: 0px;">
                <div class="panel-heading clearfix" style="color: #fff;background-color: #337ab7;border-color: #337ab7;">
                    <div class="col-md-4" style="text-align:left;">{{ admin.trans('Field', {}, admin.translationDomain)}}</div>
                    <div class="col-md-4" style="text-align:left;">{{ admin.trans('Old', {}, admin.translationDomain)}}</div>
                    <div class="col-md-4" style="text-align:left;">{{ admin.trans('New', {}, admin.translationDomain)}}</div>
                </div>
            </caption>

            {% for field, change in log.diff %}
                <tr>
                    <td class="col-md-4" style="text-align:left;"><strong>{{ admin.trans(decamelize(field), {}, 'AppBundle') }}</strong></td>
                    <td class="col-md-4" style="text-align:left;" title="{{ audit_value(change.old)}}">{{ audit_value(change.old) }}</td>
                    <td class="col-md-4" style="text-align:left;" title="{{ audit_value(change.new) }}">{{ audit_value(change.new) }}</td>
                </tr>
            {% endfor %}
        </table>
    {% endif %}

</div>
