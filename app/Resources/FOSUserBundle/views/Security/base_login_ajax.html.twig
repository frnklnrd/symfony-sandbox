<div class="col-lg-12">
    <form action="{{ path("fos_user_security_check") }}" method="post" role="form" class="form-horizontal">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}"/>

        <div class="form-group">
            <span for="username" class="col-lg-2"><i class="fa fa-user bigicon" style="color: #ddd"></i></span>
            <div class="col-lg-10"><input type="text" class="form-control" id="username" name="_username" value="{{ last_username }}" required="required" placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}"/></div>
        </div>

        <div class="form-group control-group">
            <span for="password" class="col-lg-2"><i class="fa fa-lock bigicon" style="color: #ddd"></i></span>
            <div class="col-lg-10"><input type="password" class="form-control" id="password" name="_password" required="required" placeholder="{{ 'security.login.password'|trans({}, 'FOSUserBundle') }}"/></div>
        </div>

        <div class="form-group">
            <div class="col-lg-offset-2 col-lg-10">
                <label for="remember_me" class="pull-left" style="margin-top:5px;">
                    <input type="checkbox" id="remember_me" name="_remember_me" value="on"/>
                    {{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}
                </label>
                <input type="submit" id="_submit" name="_submit" class="btn btn-primary pull-right" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}"/>
            </div>
        </div>
        <hr>
        <div class="form-group control-group">
            <div class="controls" style="text-align: center;">
                <a href="{{ path('fos_user_resetting_request') }}">{{ 'resetting.request.submit'|trans({}, 'FOSUserBundle') }}</a> /
                <a href="{{ path('fos_user_registration_register') }}">{{ 'registration.submit'|trans({}, 'FOSUserBundle') }}</a>
            </div>
        </div>
    </form>
</div>

